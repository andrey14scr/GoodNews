@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container">
        <div id="carouselwithIndicators" class="carousel slide h-auto" data-ride="carousel">

            <div class=" carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block " src="~/resources/img/FirstSlide.JPG" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block" src="~/resources/img/SecondSlide.JPG" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block " src="~/resources/img/ThirdSlide.JPG" alt="Third slide">
                </div>
            </div>

            <a class="carousel-control-prev carousel-control-width" href="#carouselwithIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next carousel-control-width" href="#carouselwithIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="mt-3 large-size">
        <a class="align-content-around text-info" asp-controller="Navigation" asp-action="Main">Начать читать</a>
    </div>
</div>

@section Scripts
{
    <script src="~/js/carousel.js"></script>
}