@model LoginModel

<div>
    <h1>Вход в аккаунт</h1>
    <br />

    <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" method="post">
        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group row">
            <label class="col-sm-2 col-form-label align-self-center" asp-for="Username">Имя пользователя</label>
            <div class="col-sm-6 align-self-center">
                <input class="form-control" placeholder="Имя пользователя" type="text" asp-for="Username">
            </div>
            <span class="text-danger align-self-center ml-3" asp-validation-for="Username"></span>
        </div>
        <div class="form-group row align-content-center">
            <label class="col-sm-2 col-form-label align-self-center" asp-for="Password">Пароль</label>
            <div class="col-sm-6 align-self-center">
                <input class="form-control" placeholder="Пароль" type="password" asp-for="Password">
            </div>
            <span class="text-danger align-self-center ml-3" asp-validation-for="Password"></span>
        </div>
        <div>
            <input class="btn btn-primary mb-2 mt-2" type="submit" value="Войти" />
        </div>
    </form>

    <br />

    <span>Нет аккаунта?</span>
    <a method="get" asp-controller="Account" asp-action="Register">Регистрация</a>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/redirections.js" asp-append-version="true"></script>
}